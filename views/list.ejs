<%- include("header") -%>
<!-- this is EJS layouts -->

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>
<div class="box">
  <!-- newListItem is array of mongoDB documents -->
  <% newListItem.forEach(item => { %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
      <p><%= item.name %></p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>"></input>
  </form>
  <%  }); %>
  <!-- the form do post request to the "/" route -->
  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <!-- button type is must to be "submit" to submit data to post request -->
    <button type="submit" name="button" value="<%= listTitle %>"> + </button>
  </form>
</div>

<%- include("footer") -%>
